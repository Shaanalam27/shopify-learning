<style>
  .main-button {
    text-decoration: none;
    background-color: black;
    color: white;
    width: 200px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #outer-div h1 {
    color: white;
    font-size: 30px;
    line-height: 30px;
    margin: 0px;
    padding: 0px;
  }

  #outer-div p {
    color: white;
    font-size: 20px;
    line-height: 20px;
    margin: 0px;
    padding: 0px;
  }

  #outer-div {
    height: 80vh;
    width: 100%;
    background-image: url('{{ section.settings.background-image | img_url: ''}}');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }
  #wrapper {
    display: flex;
    flex-direction: column;
    align-items: left;
    justify-content: center;
    max-width: 1300px;
    height: 100%;
    margin: auto;
    gap: 20px;
    padding: 20px;
  }
  @media screen and (max-width: 767px) {
    #outer-div {
      background-image: url("{{ section.settings.mobile-background-image | img_url: ' ' }}");
    }
  }
</style>
<div id="outer-div">
  <div id="wrapper">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings['sub-heading'] }}</p>
    <a class="main-button" href="#">order now kid</a>
  </div>
</div>
{% schema %}
{
  "name": "main hero 2",
  "settings": [],
  "blocks": [
    {
      "type": "heading",
      "name": "heading-text",
      "settings": [
        {
          "id": "text-content",
          "type": "text",
          "label": "text content"
        },
        {
          "id": "text-color",
          "type": "color",
          "label": "Link text",
          "default": "#00000"
        }
      ]
    },
    {
      "type": "sub-heading",
      "name": "sub-heading",
      "settings": [
        {
          "id": "text-content",
          "type": "text",
          "label": "text content"
        },
        {
          "id": "text-color",
          "type": "color",
          "label": "Link text",
          "default": "#00000"
        }
      ]
    }
  ],

  "presets": [{ "name": "a cta section" }]
}
{% endschema %}

{% comment %}
