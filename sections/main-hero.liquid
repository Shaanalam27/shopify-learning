<div style="background-image" : {{ section.settings['background-image'] }}>
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings['sub-heading'] }}</p>
</div>
{% schema %}
{
  "name": "main hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub-heading",
      "label": "sub-heading"
    },
    "type" : "image_picker",
    "id" : "background-image",
    "label" : "background-image"
  ],
  "presets": [{ "name": "main hero" }]
}
{% endschema %}
