<style>
  .outer-slick-slider-section {
    max-width: 1300px;
    height: 500px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  .inner-slider-slick {
    width: 200px;
    height: 300px;
    background-color: blue;
  }
</style>

<div class="outer-slick-slider-section">
  <div class="inner-slider-slick">hello</div>
  <div class="inner-slider-slick">hello</div>
  <div class="inner-slider-slick">hello</div>
  <div class="inner-slider-slick">hello</div>
</div>
<script>
  $('.slider').slick({
    // normal options...
    infinite: false,

    // the magic
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          infinite: true,
        },
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          dots: true,
        },
      },
      {
        breakpoint: 300,
        settings: 'unslick', // destroys slick
      },
    ],
  });
</script>
{% schema %}
{
  "name": "slick-slider",
  "settings": [],
  "presets": [{ "name": "slick-slide" }]
}
{% endschema %}
